<h2>My Blocmarks</h2>
<div class="profile_bookmarks">
<% @user_bookmarks.each do |bookmark_group| %>
  <div class="row">
    <h4><%= link_to bookmark_group.first %></h4>
    <div class="row">
      <% bookmark_group.last.each do |bookmark| %>
        <div class="col-md-3">
          <div>
            <%# bookmark.topic.title %><!-- use for testing -->
            <i><%= bookmark.url %></i>
          </div>
          <%= image_tag("bookmark.png") %>
          <%= link_to "Remove", topic_bookmark_path(bookmark.topic, bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?'} %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<div class="clearfix"></div> <!-- better solution? -->

<h2>Liked Blocmarks</h2>
<div class="row">
  <% @liked_bookmarks.each do |bookmark| %>
    <div class="col-md-3">
      <div>
        <i><%= bookmark.url %></i>
      </div>
      <%= image_tag("bookmark.png") %>
      <p>LIKE/UNLIKE</p>
      <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
    </div>
  <% end %>
</div>