<h1><%= @bookmark.url %></h1>

<div class="col-md-12">
  <%= image_tag("bookmark.png") %>
</div>

<%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>

<% if policy(Bookmark.new).create? %>
  <%= link_to "Edit bookmark", edit_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-default' %>
  <%= link_to "Delete bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?'} %>
<% end %>


