<h1><%= @bookmark.url %></h1>
<% if policy(Bookmark.new).create? %>
  <%= link_to "Edit bookmark", edit_topic_bookmark_path(@topic, @bookmark) %>
  <%= link_to "Delete bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-dnager', data: { confirm: 'Are you sure you want to delete this bookmark?'} %>
<% end %>