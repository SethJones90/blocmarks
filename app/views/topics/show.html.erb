<h1><%= @topic.title %></h1>

<div class="delete_topic">
  <%= link_to "Delete Topic", [@topic], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?'} %>
</div>

  <% @bookmarks.each_slice(4) do |bookmark_group| %>
<div class="row">
  <% bookmark_group.each do |bookmark| %>
    <div class="col-md-3">
      <%= link_to bookmark.url, [@topic, bookmark] %>
      <%= image_tag("bookmark.png") %>
    </div>
    <% end %>
</div>
  <% end %>
<div class="row">
    <% if policy(Bookmark.new).create? %>
    <div class="create_bookmark">
        <%= link_to "Create a bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
      </div>
        <div class="clearfix"></div> <!-- better solution? -->
    <% end %>
  </div>
</div>
