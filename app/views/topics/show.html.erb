<h1><%= @topic.title %></h1>

<div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <%= link_to bookmark.url, [@topic, bookmark] %>
      <%= image_tag("bookmark.png") %>
    </div>
  <% end %>
</div>

<div class="col-md-12 text-center">
  <% if policy(Bookmark.new).create? %>

      <%= link_to "Create a bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
      <%= link_to "Delete Topic", [@topic], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
<% end %>
</div>
