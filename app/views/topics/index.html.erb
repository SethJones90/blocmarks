<h1>All Blocmarks</h1>
<div class="row">
  <% @topics.each do |topic| %>
    <div class="col-md-4">
      <%= link_to topic.title, topic %>

      <% topic.bookmarks.take(3).each do |bookmark| %>

        <%= bookmark.url %>
        <%= image_tag("bookmark.png") %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="">
  <button type="button" class="btn btn-default">
    <%= link_to "Create a topic", new_topic_path %>
  </button>
</div>

