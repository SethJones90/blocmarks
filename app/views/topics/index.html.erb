<h1>All Blocmarks</h1>

<% @topics.each do |topic| %>
  <div class="topic_row">
    <h3><%= link_to topic.title, topic %></h3>
    <div class="row">
      <% topic.bookmarks.take(4).each do |bookmark| %>
        <div class="col-md-3">
          <div>
            <%= bookmark.url %>
          </div>
          <%= image_tag("bookmark.png") %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="">
  <%= button_to "Create a topic", new_topic_path, class: "btn btn-default" %>
</div>

